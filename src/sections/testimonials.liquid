{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<div class="index-section" id="testimonials-{{ section.id }}" data-section-type="homepage-testimonials" data-section-id="{{ section.id }}">

  <div class="row homepage-section no-fouc">
    {% if section.settings.title != blank %}
    <h2 class="desktop-12 mobile-3">{{ section.settings.title | escape }}</h2>
    {% endif %}
    <div class="clear"></div>
    <div class="testimonial-container owl-carousel">
    {% for block in section.blocks %}
    
    <div class="testimonials" {{ block.shopify_attributes }}>
        <div class="testimonial-content">
          {% if block.settings.title_text != blank %}
          <h3>{{ block.settings.title_text | escape }}</h3>
          {% endif %}
          {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
          {% endif %}
          <div class="stars">
            {% case block.settings.stars %}
            {% when 1 %}
            <i class="fa fa-star-o" aria-hidden="true"></i>
            {% when 2 %}
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            {% when 3 %}
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            {% when 4 %}
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            {% when 5 %}
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            <i class="fa fa-star-o" aria-hidden="true"></i>
            {% endcase %}     
          </div>
        </div>     
    </div>
    {% endfor %}
    </div>
  </div>

  {% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
  {% endif %}  

</div>
<div class="clear"></div>


{% schema %}
{
    "name": "Testimonials",
	"max_blocks": 12,
    "settings": [    
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Testimonials"
      }
    ],
	"blocks": [
    {
      "type": "text_block",
      "name": "Testimonial",
      "settings": [
       {
        "type": "text",
        "id": "title_text",
        "label": "Title",
        "default": "A testimonial"
       },
      {
        "type": "range",
        "id": "stars",
        "min": 1,
        "max": 5,
        "step": 1,
        "label": "Star ratings",
        "default": 5
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Text",
      "blocks": [
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          }
      ]
    }
  ]
  }
{% endschema %}
