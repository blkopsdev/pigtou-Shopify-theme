{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="homepage-section no-fouc index-section" data-section-id="{{ section.id }}">

  <div class="row">
  {% for block in section.blocks %}
    {% if section.blocks.size == 1 %}
    {%- assign block-count = 'desktop-12 tablet-6' -%}
    {% elsif section.blocks.size == 2 %}
    {%- assign block-count = 'desktop-6 tablet-6' -%}
    {% elsif section.blocks.size == 3 %}
    {%- assign block-count = 'desktop-4 tablet-2' -%}
    {% endif %}
    {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
      <div class="{{ block-count }} mobile-3 notification note-{{ block.id }}">
        {{ block.settings.textarea }}
      </div>
    {% if block.settings.link != blank %}</a>{% endif %}   
    {% endfor %}  
  </div>

  {% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
  {% endif %} 
  
</div>

<style>
  .notification p {
    font-weight: {{ section.settings.notification_font_weight }};
    font-size: {{ section.settings.notification_font-size }};
  }
  
  {% for block in section.blocks %}    
  .notification.note-{{ block.id }} {
    background: {{ block.settings.notification_background }};  
    color: {{ block.settings.notification_color }};
    {% if section.settings.notification-border-style != none %}
    border-color: {{ block.settings.notification-border-color }};
    border-style: {{ section.settings.notification-border-style }};
    border-width: {{ section.settings.notification-border-width }};
    {% endif %}  
  }
  {% endfor %}
</style>

