{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
{% layout none %}
<!DOCTYPE html>
<html style="padding: 0">
  <head>
    <title>
      {% if template == 'index' %}{% if langify_title contains 'Welcome' %}{{ langify_shop_name }} <ly-as-10096805>– Welcome</ly-as-10096805>{% else %}{{ langify_title }}{% endif %}{% elsif template == '404' %}<ly-as-9405325>Page Not Found</ly-as-9405325>{% elsif langify_title contains langify_shop_name %}{{ langify_title }}{% else %}{{ langify_title }} – {{ langify_shop_name }}{% endif %}
    </title>
    {% if langify_description %}
    <meta name="description" content="{{ langify_description }}" />
    {% endif %}
    <link rel="canonical" href="{{ canonical_url }}" />
  	{% include 'social-media-meta-tags' %}
    {% comment %}ly_asset_replace_for_[ 'stylesheet.css' | asset_url | stylesheet_tag ]_begin{% endcomment %}{% assign ly_asset = 'stylesheet.css' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | stylesheet_tag }}{% comment %}ly_asset_replace_end{% endcomment %}
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    {% include 'google-fonts' %}
  	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

    {{ content_for_header }}

  </head>
  <body class="gridlock {{ template }}" data-section-id="{{ section.id }}">

    <div class="slideout">
      <div class="closeslide slideout-toggle">
        <i class="fa fa-times" aria-hidden="true"></i>
      </div>
        <div>
        {% form 'storefront_password' %}
        {{ form.errors | default_errors }}
        <label for="password">{% comment %}ly_i18n_replace_for_[ 'password.general.enter_store' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.enter_store' | t }}{% endcapture %}{% include 'ly-static-string' with '9405327' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</label>
        <input type="password" name="password" placeholder="{% comment %}ly_i18n_replace_for_[ 'password.general.password' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.password' | t }}{% endcapture %}{% include 'ly-static-string' with '9405328' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
        <input type="submit" value="{% comment %}ly_i18n_replace_for_[ 'password.general.enter' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.enter' | t }}{% endcapture %}{% include 'ly-static-string' with '9405329' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
        {% endform %}
      </div>
    </div>    


    <div class="slideout-toggle open_password">
      <i class="fa fa-lock" aria-hidden="true"></i> {% comment %}ly_i18n_replace_for_[ 'password.general.enter_store' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.enter_store' | t }}{% endcapture %}{% include 'ly-static-string' with '9405327' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
    </div>

    <div class="password-page">
      <div class="row">       
        <div id="logo" class="desktop-8 desktop-push-2 tablet-6 mobile-3">   
           {% if section.settings.logo != blank %}
          {%- assign image_size = '400x' -%}
          <a href="/">
            <img class="lazyload" data-src="{{ section.settings.logo | img_url: image_size }}" alt="{{ section.settings.logo.alt | default: langify_shop_name }}" itemprop="logo">        
          </a>
          {% else %}
          <a href="/">{{ langify_shop_name }}</a>  
          {% endif %}
        </div>            
      </div>


      <div id="signup-holder" class="row">
        <div id="signup-wrap" class="desktop-6 desktop-push-3 tablet-4 tablet-push-1 mobile-3">
          {% unless shop.password_message == blank %}
          <div id="password-message">
            {{ shop.password_message }}
          </div>
          {% endunless %}           
          <div id="password-signup">
            {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
            <p class="success">{% comment %}ly_i18n_replace_for_[ 'password.general.thanks' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.thanks' | t }}{% endcapture %}{% include 'ly-static-string' with '9405330' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</p>
            {% else %}

            <input type="hidden" name="contact[tags]" value="prospect, password page">
            <input type="email" name="contact[email]" id="password-email" placeholder="{% comment %}ly_i18n_replace_for_[ 'password.general.email_address' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.email_address' | t }}{% endcapture %}{% include 'ly-static-string' with '9405331' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
            <input type="submit" id="password-subscribe" value="{% comment %}ly_i18n_replace_for_[ 'password.general.submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.submit' | t }}{% endcapture %}{% include 'ly-static-string' with '9405332' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
            {% endif %}
            {% endform %}  
          </div>
        </div>
        
        <div class="clear"></div>
        
        <ul id="password-icons" class="desktop-6 desktop-push-3 tablet-6 mobile-3">
        {% if settings.facebook_url != blank %}<li><a href="{{ settings.facebook_url }}" target="_blank"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></a></li>{% endif %}
        {% if settings.instagram-id != blank %}<li><a href="//instagram.com/{{ settings.instagram-id }}" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a></li>{% endif %}      
        {% if settings.twittername != blank %}<li><a href="{{ settings.twittername }}" target="_blank"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a></li>{% endif %}
        {% if settings.pinterest_url != blank %}<li><a href="{{ settings.pinterest_url }}" target="_blank"><i class="fa fa-pinterest fa-2x" aria-hidden="true"></i></a></li>{% endif %}
        {% if settings.tumblr_url != blank %}<li><a href="{{ settings.tumblr_url }}" target="_blank"><i class="fa fa-tumblr fa-2x" aria-hidden="true"></i></a></li>{% endif %}
        {% if settings.youtube_url != blank %}<li><a href="{{ settings.youtube_url }}" target="_blank"><i class="fa fa-youtube fa-2x" aria-hidden="true"></i></a></li>{% endif %}
        {% if settings.googleplus_url != blank %}<li><a href="{{ settings.googleplus_url }}" target="_blank"><i class="fa fa-google-plus-official fa-2x" aria-hidden="true"></i></a></li>{% endif %}
        </ul>  
        
        
      </div>
    </div>  
    
    <div class="pass-foot">{% comment %}ly_i18n_replace_for_[ 'password.general.powered' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'password.general.powered' | t }}{% endcapture %}{% include 'ly-static-string' with '9405333' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} <a href="//www.shopify.com/?ref=undergroundmedia"><ly-as-9405326>shopify</ly-as-9405326></a></div>

    <script>
      $(document).ready(function() {
        $('.slideout-toggle').on('click', function(event) {
            event.preventDefault();
            var slideout = $('.slideout');
            var slideoutWidth = $('.slideout').width();   	
            slideout.toggleClass('open');
            if (slideout.hasClass('open'))
            {
              slideout.animate({right: '0'}, 250);	
            }
            else
            {
              slideout.animate({right: -slideoutWidth}, 250);	
            }     
          });      
          if ( $('.storefront-password-form .errors').size() ) {
            var $errortoggle = $('.slideout');
            $($errortoggle).addClass('open');  
            $('.slideout-toggle').trigger('click');
          }
        
        $(document).on('shopify:section:load', function(event) {      
          $('.slideout-toggle').on('click', function(event) {
            event.preventDefault();
            var slideout = $('.slideout');
            var slideoutWidth = $('.slideout').width();   	
            slideout.toggleClass('open');
            if (slideout.hasClass('open'))
            {
              slideout.animate({right: '0'}, 250);	
            }
            else
            {
              slideout.animate({right: -slideoutWidth}, 250);	
            }     
          });      
          if ( $('.storefront-password-form .errors').size() ) {
            var $errortoggle = $('.slideout');
            $($errortoggle).addClass('open');  
            $('.slideout-toggle').trigger('click');
          } 
        }); 
       });
    </script>

  </body>
</html>

 {%- assign image_size = '2048x' -%}
<style>
  body.password { 
    background: {{ section.settings.background-color }}{% if section.settings.background-image != blank %} url({{ section.settings.background-image | img_url: image_size }}) {% endif %};  background-position: center center;
    color: {{ section.settings.text-color }};
  }  
  body.password a, body.password p, body.password h1, body.password h2, body.password h3 { 
    color: {{ section.settings.text-color }};
  } 
  #password-signup h3 { 
    color: {{ section.settings.text-color }};
  }
  ul#password-icons li a {
    color: {{ section.settings.text-color }};
  }
</style>


{% schema %}
  {
    "name": "Password page",
    "settings": [
    {
        "type": "paragraph",
        "content": "[Add a coming soon message for your customers.](\/admin\/online_store\/preferences)"
    },
     {
        "type": "color",
        "id": "background-color",
        "label": "Background",
        "default": "#f5f5f5"
      },
      {
        "type": "color",
        "id": "text-color",
        "label": "Text",
        "default": "#000000"
      },
    {
      "type": "image_picker",
      "id": "background-image",
      "label": "Background image"
    },
    {
        "type": "header",
        "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_max_width",
      "label": "Custom logo width (in pixels)",
