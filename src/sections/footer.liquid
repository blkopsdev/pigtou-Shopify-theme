{
  "name": "Footer",
  "max_blocks": 4,
  "settings": [
      {
        "type": "checkbox",
        "id": "show_signup_bar",
        "label": "Show email signup bar"
      }
  ],
  "blocks":[
    {
      "type":"menu",
      "name":"Menu",
      "settings":[
        {
          "type": "link_list",
          "id": "footer_nav",
          "label": "Choose a menu",
          "info":"This menu won't show dropdown items"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Menu title",
          "default": "Explore"
        }
      ]
    },
    {
      "type":"blog",
      "name":"Blog",
      "limit": 1,
      "settings":[
        {
          "id": "footer_blog",
          "type": "blog",
          "label": "Blog"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Blog title",
          "default": "Recent posts"
        },
        {
          "type": "select",
          "id": "post_limit",
          "label": "Posts",
          "default": "3",
          "options": [
            {
              "value": "3",
              "label": "3"
            },
            {
              "value": "6",
              "label": "6"
            },
            {
              "value": "9",
              "label": "9"
            },
            {
              "value": "12",
              "label": "12"
            }
          ]
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings":[
        {
          "type": "text",
          "id": "title",
          "label": "Text title",
          "default": "About"
        },
      {
          "id": "footer_text",
          "type": "richtext",
          "label": "Text",
          "default": "<p>Add some text to your footer.</p>"
       }
      ]
    }
  ]
}
