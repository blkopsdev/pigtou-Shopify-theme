{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="footer-section" data-section-id="{{ section.id }}" data-section-type="footer-section">
{% comment %}
  {% include 'shipping-detail'%}
  {% endcomment %}
  {% if section.settings.show_signup_bar %}
  <div id="newsletter">
    <div class="row">
      <div class="klaviyo-form-JAMSvE"></div>
      {% include 'klaviyo-newsletter' %}
      {% comment %}
      {% include 'mailing' %}
      {% endcomment %}
    </div>
  </div>
  {% endif %}

<footer>
  <div class="row">
    {% case section.blocks.size %}
    {% when 0 %}
    {% when 1 %}
    {% assign column_width = 'desktop-12 tablet-6 mobile-3' %}
    {% when 2 %}
    {% assign column_width = 'desktop-6 tablet-6 mobile-3' %}
    {% when 3 %}
    {% assign column_width = 'desktop-4 tablet-6 mobile-3' %}
    {% when 4 %}
    {% assign column_width = 'desktop-3 tablet-6 mobile-3' %}
    {% endcase %}
    {% for block in section.blocks %}
    {% case block.type %}
    {% when 'menu' %}
    <div class="{{ column_width }}">
      <div class="section-title">
        <h4>{{ block.settings.title | escape }}</h4>
      </div>
      <ul {{ block.shopify_attributes }}>
        {% for link in linklists[block.settings.footer_nav].links %}
        <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
        {% endfor %}
      </ul>
    </div>
    {% when 'blog' %}
    <div class="{{ column_width }}">
      <div class="section-title">
        <h4>{{ block.settings.title | escape }}</h4>
      </div>
      <ul>
        {% for article in blogs[block.settings.footer_blog].articles limit: block.settings.post_limit %}
        <li><a href="{{ article.url }}">{% comment %}ly_code_replace_for_[ article.title ]_begin{% endcomment %}{% include 'ly-title' with article %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a></li>
        {% endfor %}
      </ul>
    </div>
    {% when 'text' %}
    <div class="{{ column_width }}">
      <div class="section-title">
        <h4>{{ block.settings.title | escape }}</h4>
      </div>
      {{ block.settings.footer_text }}
    </div>
    {% endcase %}
    {% endfor %}
  </div>
  <div class="clear"></div>
  <div class="sub-footer row">
    <div class="desktop-6 tablet-3 mobile-3 left-side">
    <ly-as-9405308>© 2019 Pigtou | SAY NO TO BOREDOM! |</ly-as-9405308>
    </div>
    <div class="desktop-6 tablet-3 mobile-3 right-side">
      {% for type in shop.enabled_payment_types %}
      <img class="lazyload" data-src="{{ type | payment_type_img_url }}" />
      {% endfor %}
    </div>
  </div>

</footer>

</div>
<script>
  jQuery(document).ready(function() {
    function close_accordion_section() {
      jQuery('.section-title').removeClass('active');
      jQuery('.section-title').next('ul').slideUp(300).removeClass('open');
    }
    jQuery('.section-title').click(function(e) {
      var currentAttrValue = jQuery(this).attr('href');
      if (jQuery(this).is('.active')) {
        close_accordion_section();
      } else {
        close_accordion_section();
        jQuery(this).addClass('active');
        jQuery(this).next('ul').slideDown(300).addClass('open');
      }
      e.preventDefault();
    });
  });
</script>
