	{% capture asyncLoad %}
		document.addEventListener("StartAsyncLoading", function(event)
		{
			console.log('asyncLoad is loaded');
			asyncLoad();
		});
	{% endcapture %}

	{% capture endScript %}
		appendChild(eventsListenerScript)})
	{% endcapture %}

	{% capture js_content_for_header %}
		{{ 
			content_for_header 
		| replace: "x.parentNode.insertBefore(s, x);", "loadJS(urls[i]);"
		| replace: "window.attachEvent('onload', asyncLoad)", ""
		| replace: "window.addEventListener('load', asyncLoad, false);", asyncLoad		
		| replace: "var customDocumentWrite", "document.addEventListener('StartKernelLoading', function() { document.dispatchEvent(new CustomEvent('StartShopifyLoading')); var customDocumentWrite"
		|	replace: "appendChild(eventsListenerScript)", endScript
		|	replace: "DOMContentLoaded", 'StartKLoad'
		| replace: '"https:\/\/currencyrobo.shopapps.in\/appJs\/converter.php?shop=pigtou.myshopify.com",', ''
		}}
	{% endcapture %}

	{% capture js_content_for_header %}
	{{ 
		js_content_for_header 
	| replace: 'adminBarInjector.init();', ''
	}}		
	{% endcapture %}

	{% assign js_words = js_content_for_header | split: '<script ' %}

	{% for word in js_words %}
		{% if word contains 'defer="defer" src="' %}
			{% capture js_content_for_header %}
				{% capture __replace %}<script {{word}}{% endcapture %}
				{{ js_content_for_header | replace: __replace, '' }}
			{% endcapture %}
		{% endif %}
	{% endfor %}

	{% capture js_content_for_header_defer %}
		{% for word in js_words %}
			{% if word contains 'defer="defer" src="' %}
				<script {{ word }}
			{% endif %}
		{% endfor %}
	{% endcapture %}