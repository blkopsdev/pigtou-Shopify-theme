{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% comment %}Used for home page sections only when featured collections is chosen but no content has been selected{% endcomment %}
{%- assign col_limit = section.settings.homepage-collection-limit -%}
<div id="{{ block.id }}-tab-{{ forloop.index }}"{{ block.shopify_attributes }}>  
    <div class="product-collection-carousel">
	{% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
       {%- assign placeholder = 'collection-' | append: current -%}
      <div class="product-index onboard" data-alpha="{% comment %}ly_code_replace_for_[ collection.title ]_begin{% endcomment %}{% include 'ly-title' with collection %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}">          
        {{ placeholder | placeholder_svg_tag }}
      </div>  
      {% for i in (1..col_limit) %}
      <div class="product-car">
        <div class="product-index"> 
          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
          {%- assign placeholder = 'product-' | append: current -%}
          <div class="prod-container">
            <div class="prod-image onboard">
              <a href="#">
               {{ placeholder | placeholder_svg_tag }}
              </a>
            </div>
          </div>
          <div class="product-info"> 
            <a href="#"> 
              <h3><ly-as-9405431>Product</ly-as-9405431> {{ forloop.index }}</h3>
            </a>
            <div class="price">
              <div class="prod-price">9.99</div>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
</div>
