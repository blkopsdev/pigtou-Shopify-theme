{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% if paginate.pages > 1 %}
<div class="pagination row">
  
  <ul>
     <li class="pagination-arrow pagination-arrow--previous row desktop-4 tablet-2 mobile-1">
   
     {% unless paginate.previous.is_link %}
       <a href="javascript:void(0)" class="btn btn--secondary btn--narrow disabled">
          <i class="fa fa-chevron-left"></i>   
         <span class="icon__fallback-text">{% comment %}ly_i18n_replace_for_[ 'general.pagination.previous' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.pagination.previous' | t }}{% endcapture %}{% include 'ly-static-string' with '9405433' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
                
        </a>
      {% else %}
     
        <a href="{{ paginate.previous.url }}" class="btn btn--secondary btn--narrow">
          <i class="fa fa-chevron-left"></i>
          <span class="icon__fallback-text">{% comment %}ly_i18n_replace_for_[ 'general.pagination.previous' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.pagination.previous' | t }}{% endcapture %}{% include 'ly-static-string' with '9405433' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
        </a>
      {% endunless %}
    
      </li>
     
    
    <li class="pagination-text row desktop-4 tablet-2 mobile-1">
      <div class="hidden-xs">{% comment %}ly_i18n_replace_for_[ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages }}{% endcapture %}{% include 'ly-static-string' with '9405436' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = paginate.current_page %}{% assign ly_template = ly_template | replace: '[[current]]', replacement %}{% assign replacement = paginate.pages  %}{% assign ly_template = ly_template | replace: '[[total]]', replacement %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</div>
    </li>
      {% if paginate.next %}
    <li class="pagination-arrow pagination-arrow--next row desktop-4 tablet-2 mobile-1">
     
      {% unless paginate.next.is_link %}
       <a href="javascript:void(0)" class="btn btn--secondary btn--narrow disabled">
          <span class="icon__fallback-text">{% comment %}ly_i18n_replace_for_[ 'general.pagination.next' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.pagination.next' | t }}{% endcapture %}{% include 'ly-static-string' with '9405437' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
          <i class="fa fa-chevron-right"></i>          
        </a>
      {% else %}
      
        <a href="{{ paginate.next.url }}" class="btn btn--secondary btn--narrow">
          <span class="icon__fallback-text">{% comment %}ly_i18n_replace_for_[ 'general.pagination.next' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.pagination.next' | t }}{% endcapture %}{% include 'ly-static-string' with '9405437' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</span>
          <i class="fa fa-chevron-right"></i>          
        </a>
      {% endunless %}
    </li>
  </ul>
  {% endif %}

</div>
{% endif %}